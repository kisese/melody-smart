<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape>
            <solid 
                android:color="#f5f5f5"/>
            <stroke
				android:width="0.2dp"
                android:color="#52893E"
                />
            <corners
                android:radius="6dp"/>
     
        </shape>
    </item>
	<item>
	    <shape>
			<gradient
				android:startColor="#ADFF2F"
				android:centerColor="#BCDE6E"
				android:endColor="#6B8E23"
				android:angle="270"
				/>
	        <stroke 
	            android:width="0.2dp"
	            android:color="#52893E"
	            />
	        <corners 
	            android:radius="6dp"
	            />

	    </shape>
	</item>
</selector>